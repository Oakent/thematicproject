<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/stylesheets/pico/css/pico.classless.min.css"/>
    <link rel="stylesheet" href="/stylesheets/styles.css" />
    <title>Cupboard</title>
  </head>

  <body>

    <%  
      const categories = ['Herbs, Sauces and Spices', 'Carbohydrates', 'Fats and Sugars', 'Dairy', 'Fruit and Vegetables', 'Protein', 'Other'];   
    %>
   
    <main class = "Container">
      <div class="NavBar">
        <button type="button" class="NavBtn" id="settings">
          <img src="/img/settings.svg" alt="Settings Button" />
        </button>
        <input type="text" placeholder="Search recipes..." class="Search" id ="recipeSearch"/>
        <button type="button" class="NavBtn" id="searchBtn">
          <img src="/img/search.svg" alt="Search Button" />
        </button>
        <button type="button" class="NavBtn" id="searchAdj">
          <img src="/img/adjustments.svg" alt="Search Adjustments" />
        </button>
      </div>
    
      <% categories.forEach(category => { %>       
      <div class="Shelves">
        <details class="Shelf">
        <summary class = "ShelfSummary"><%= category%></summary>
        <form class = "IngredientForm" action="" method="post">
        <input type = "search" placeholder="Search ingredients..." class="Search" id ="ingredientSearch"/>
          <div class= "IngredientGrid">
            <% ingredients.forEach(ingredient => { 
              if (ingredient.category === category) { %>
                <div class = "IngredientItem">
                  <input type="checkbox" name="OwnedIngredient" value="<%= ingredient.name %>" checked>
                  <label for="<%= ingredient.name %>"><%= ingredient.name %></label>
                </div>
            <% }}); %>
          </div>
          <button type="submit" class="IngredientUpdate">Update Ingredients</button>
        </form>
        </details>
      </div>
      <div class="ShelfFrame"></div>
      <div class="ShelfBottom"></div>
      <% }); %> 

    </main>
  </body>
</html>
